#include <stdio.h>

struct Student {
    int roll;
    char name[20];
    float marks;
};

int main() {
    struct Student s1 = {101, "Rahul", 89.5};

    printf("Student Details (Structure):\n");
    printf("Roll: %d\n", s1.roll);
    printf("Name: %s\n", s1.name);
    printf("Marks: %.2f\n", s1.marks);

    printf("\nSize of structure: %lu bytes\n", sizeof(s1));
    return 0;
}
